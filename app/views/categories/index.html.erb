<div class="row">
    <div class="col-lg-9 text-left">
        <h1>Categories</h1>
    </div>
    <div class="col-lg-3 text-right">
        <div class="row">
            <div class="col-lg-4">
                <%= link_to "All", root_path, class: 'btn btn-info' %>
            </div>
            <div class="col-lg-4">
                <%= link_to "Learn", root_path %>
            </div>
            <div class="col-lg-4">
                <%= link_to "Unlearn", root_path %>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <% @categories.each do |category| %>
        <% @id_array.uniq.each do |id| %>
            <% if category.id == id %>
                <div class="col-lg-6">
                    <div class="jumbotron jumbotron">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-7 ml-3">
                                    <h1><%= category.title %></h1>
                                    <p class="lead"><%= category.description %></p>
                                </div>
                                <div class="col-lg-4 text-right">
                                    <%= form_for @lesson do |f| %>
                                        <%= f.hidden_field :category_id, :value => category.id %>
                                        <% if !checklearn(category).nil? %>
                                        <p class="font-italic text-muted"> Learned <%= checklearn(category).results %> of <%= checklearn(category).category.words.count %></p>
                                        <div class='btn btn-light text-dark'>
                                            <i class="fa fa-eye"></i>
                                            <%= link_to  "Show results", lesson_url(category.lessons.ids), class: 'text-dark'%>
                                        </div>
                                        <% else %>
                                            <%= f.submit "Learn",  class: 'btn btn-primary btn-block mt-5' %>
                                        <% end %>
                                    <% end %>
                                </div>
                            </div>
                         </div>
                    </div>
                </div> 
            <% end %> 
        <% end %>                     
    <% end %>
</div>

<div class="text-center border-top pt-3">
    <%= will_paginate %>
</div>    