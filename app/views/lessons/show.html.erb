<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h2><%= @answer.lesson.category.title %></h2>
                </div>
                <div class="col-lg-6 text-right">
                    <h3>Result: <%= @answer.lesson.results %> of <%= @answer.lesson.category.words.count %></h3>
                </div>
            </div>    
            <blockquote class="blockquote mb-0">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Word</th>
                            <th>Correct answer</th>
                            <th>Answer</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @answers.each do |answer|%>
                            <tr>
                                <td><%= answer.word.word %></td>
                                <td><%= answer.word.correct_choice.choice %></td>
                                <td><%= answer.choice.choice %></td>
                                <% if  answer.word.correct_choice.choice == answer.choice.choice%>
                                    <td><i class="fa fa-check"></i></td>
                                <% else %>
                                    <td><i class="fa fa-times"></i></td>
                                <% end %>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </blockquote>
        </div>
    </div>
</div>

